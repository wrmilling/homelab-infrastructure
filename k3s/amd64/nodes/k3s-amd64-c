#cloud-config

hostname: k3s-amd64-c

chpasswd:
  expire: false
  list:
  - ubuntu:$UBUNTU_PASSWORD

# Enable password authentication with the SSH daemon
ssh_pwauth: false
ssh_import_id:
- gh:wrmilling
ssh_authorized_keys:
  - "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAINb0CjZ5VG6kN8SBz/HRZu7UbpVLCSWmOMgC0YLvOCXj Winston@Milli.ng"
  - "ssh-rsa  Winston@Milli.ng"

## Update apt database and upgrade packages on first boot
package_update: true
package_upgrade: true

# This disk setup is "cowboy" mode, /dev/sdb will be blown away on setup.
disk_setup:
  /dev/sdb:
    table_type: 'gpt'
    layout: true
    overwrite: true

fs_setup:
  - label: longhorn
    filesystem: ext4
    device: '/dev/sdb'
    partition: auto

mounts: 
  - [sdb, /longhorn, auto, "defaults", "0", "0"]

packages:
- curl
- wget
- htop
- vim
- nfs-common
- qemu-guest-agent
- open-iscsi

ntp:
  enabled: true
  
runcmd:
- ln -sfn /run/systemd/resolve/resolv.conf /etc/resolv.conf
- echo 'GRUB_CMDLINE_LINUX_DEFAULT="$GRUB_CMDLINE_LINUX_DEFAULT ipv6.disable=1"' | tee /etc/default/grub.d/ipv6.cfg
- apt-get install -fy linux-modules-extra-$(uname -r)
- 'curl -sfL https://get.k3s.io | K3S_URL=https://k3s-amd64-0:6443 K3S_TOKEN=$K3S_NODE_TOKEN sh -s - --node-label kernel-upgrade=enabled --node-label k3s-upgrade=enabled --node-label node.longhorn.io/create-default-disk=true'
- apt autoremove -fy
- sync
- reboot -f
